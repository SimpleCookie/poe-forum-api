    "@fastify/swagger-ui": "^5.2.5",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "dayjs": "^1.11.19",
    "dotenv": "^16.4.7",
    "fastify": "^5.7.4",
    "openai": "^4.77.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "orval": "^8.4.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
