  "scripts": {
    "dev": "tsx src/server/index.ts",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "generate:api": "node scripts/generate-api.js",
    "build:client": "cd packages/api-client && npm run build",
    "publish:client": "cd packages/api-client && npm publish",
    "publish:client:auto": "node scripts/publish-client.js",
    "format": "prettier --write \"src/**/*.ts\" \"scripts/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"scripts/**/*.js\""
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/rate-limit": "^10.3.0",
